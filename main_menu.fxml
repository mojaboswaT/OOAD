<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<BorderPane stylesheets="@styles.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="MainMenuController" style="-fx-background-color: #f5f7fa;">
    <top>
        <ToolBar style="-fx-background-color: white; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);">
            <Label text="Banking System - Main Menu" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 6 14;" />
        </ToolBar>
    </top>
    <center>
        <GridPane>
            <columnConstraints>
                <!-- Left menu column fixed-ish width -->
                <ColumnConstraints minWidth="220" prefWidth="220" maxWidth="300" />
                <!-- Right content column grows with window -->
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <!-- Left menu column -->
            <VBox spacing="8" alignment="CENTER" style="-fx-background-color: transparent; -fx-padding: 15;" GridPane.columnIndex="0">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <!-- Top spacer to push menu towards vertical center -->
                <Pane VBox.vgrow="ALWAYS" />

                <Button text="Create Account" onAction="#navCreateAccount" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 180; -fx-padding: 8 14;"/>
                <Button text="Close Account" onAction="#navCloseAccount" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 180; -fx-padding: 8 14;"/>
                <Button text="View Accounts" onAction="#navViewAccounts" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 180; -fx-padding: 8 14;"/>
                <Button text="Deposit" onAction="#navDeposit" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 180; -fx-padding: 8 14;"/>
                <Button text="Withdraw" onAction="#navWithdraw" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 180; -fx-padding: 8 14;"/>
                <Button text="Transfer" onAction="#navTransfer" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 180; -fx-padding: 8 14;"/>
                <Button text="View History" onAction="#navHistory" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 180; -fx-padding: 8 14;"/>

                <!-- Bottom spacer so buttons stay centered vertically -->
                <Pane VBox.vgrow="ALWAYS" />
            </VBox>

            <!-- Content area grows to fill remaining space -->
            <StackPane fx:id="contentArea" GridPane.columnIndex="1">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </StackPane>
        </GridPane>
    </center>
</BorderPane>

